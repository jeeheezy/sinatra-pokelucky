<% if @current_encounter!= nil %>
  <div class="pokeball split_screen">
    <img src="<%= @sprite_url %>" alt="pokeball_sprite">
    <p><%= @name.capitalize %> was caught! Would you like to add <%= @name %> to the party?</p>
  </div>
  <div class="split_screen">
    <form action="/add_party" method="post" class="button_forms">
      <button>Yes</button>
    </form>
    <form action="/release" class="button_forms">
      <button>No</button>
    </form>
  </div>
<% end %>
